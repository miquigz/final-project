<div class="justify-content-center bg-sec-opacity mb-2 py-1 rounded border border-warning flex-wrap container">
    <h2 class="text-center text-white my-2 w-100">Actividad:</h2>
    <div class="d-flex justify-content-center align-items-center">
    </div>
</div>

<div class="row justify-content-center border-light rounded bg-sec-opacity py-2 shadow-box mx-auto" style="max-width: 95%;">
    <div class="w-100">
        <h2 class="text-center text-warning rounded mx-4 mt-2">Posts de {{user.name}}:</h2>
    </div>
    {{#isEmpty misPosts}}
        <h5 class="text-center text-light font-weight-bold">No cuenta con ningun post</h5>
    {{else}}
        {{#forEach misPosts}}
            {{>userPartials p = this}}
        {{/forEach}}
    {{/isEmpty}}
</div>


<div class="row justify-content-center border-light rounded my-3 bg-sec-opacity shadow-box mx-auto" style="max-width: 95%;">
    <div class="w-100">
        <h2 class="text-center text-warning ">Posts Likeados:</h2>
    </div>
    
    {{#isEmpty postLikeados}}
        <h5 class="text-center text-light font-weight-bold">Sin posts a los que dio like.</h5>
    {{else}}
        {{#forEach postLikeados}}
            {{>userPartials p = this}}
        {{/forEach}}
    {{/isEmpty}}
</div>