<div class="d-flex justify-content-center bg-sec-opacity my-2 py-3 rounded border border-light flex-wrap">
    <h2 class="text-center text-success my-2 w-100">{{title}} : {{users.length}}</h2>
</div>

<hr class="bg-light text-center">
<div class="bg-sec-opacity my-2 mx-1 p-2 py-4 rounded border border-light flex-wrap">
    <a href="/users/?alphabet=true{{#if searchByUser}}&userName={{searchByUser}}{{/if}}" {{#if (eq ordenActual "alphabet")}}class="btn btn-outline-success"{{else}}class="btn btn-success"{{/if}}>Ordenar por alfabeto</a>
    <a href="/users/?dateOld=true{{#if searchByUser}}&userName={{searchByUser}}{{/if}}" {{#if (eq ordenActual "dateOld")}}class="btn btn-outline-success"{{else}}class="btn btn-success"{{/if}}>Ordenar por antiguedad</a>
    <a href="/users/?dateRecent=true{{#if searchByUser}}&userName={{searchByUser}}{{/if}}" {{#if (eq ordenActual "dateRecent")}}class="btn btn-outline-success"{{else}}class="btn btn-success"{{/if}}>Ordenar por recientes</a>
    {{#if (not user) }}<p class="text-success mt-2">*Para poder acceder a los perfiles de cada usuario debe iniciar sesion.</p> {{/if}}
</div>
{{!-- //TODO: Buscar usuarios por nombre --}}
<div class="bg-sec-opacity my-2 mx-1 p-2 py-4 rounded border border-light flex-wrap">
    <form action="/search/user/" method="GET" class="d-flex justify-content-center">
    <div class="mx-2">
        <h4 class="text-success text-center font-weight-bold">Buscar usuarios por nombre</h4>
    </div>
    <input {{#if user}} class="form-control w-25 me-sm-2" {{else}} class="form-control w-25 me-sm-2 disabled bg-light text-warning"{{/if}} type="text" id="userName" name="userName" placeholder="Buscar Usuario/s">
    <button {{#if user}} class="btn btn-info my-2 mx-2 my-sm-0" {{else}} class="disabled btn mx-2 my-2 my-sm-0 btn-light" {{/if}}type="submit">Search</button>
</form>
</div>


<div class="row justify-content-center mx-auto p-4 border border-dark rounded mt-3 bg-sec-opacity shadow-box">
    {{!-- Cada each tiene su propio contexto, ..., pasamos var global --}}
{{#isEmpty users}}
    <h3 class="text-success my-4">Sin usuarios :(</h3>
</div>
{{else}}
    {{#each users as |user|}}
        <div class="col-sm-6 col-lg-3 col-md-6 card text-dark bg-success mb-3 mx-1 border border-dark" style="max-height: 300px;">            
            <div class="card-header rounded text-center bg-secondary"><a href="/user/{{this.slugUser}}"
            {{#if @root.user}} class="nav-link bg-link rounded text-dark px-2"{{else}}class="nav-link btn btn-success disabled rounded text-dark px-2 disabled" {{/if}}>{{this.name}}</a></div>
            <div class="card-body d-flex flex-wrap justify-content-center">
                {{#if this.desc}}<p class="card-text">{{this.desc}}</p>{{/if}}
                <p class="card-text text-muted">Fecha de creacion: {{this.createdAt}}</p>
                <div>
                    <a href="/user/{{this.slugUser}}"{{#if @root.user}}class="btn btn-sm btn-light my-2 font-weight-bold border border-dark rounded"{{else}}class="btn btn-sm btn-light my-2 font-weight-bold border border-dark rounded disabled"{{/if}}>Ver perfil</a>
                </div>
                
            </div>
        </div>
    {{/each}}
</div>
<div class="d-flex justify-content-end mt-4">
    <a class="nav-link bg-link rounded text-dark px-2 my-2" href="#top">Back to top</a>
</div>
{{/isEmpty}}