<div class="bg-sec-opacity py-3 rounded border border-light p-2 mt-2 rounded">
    <h2 class="m-4">Editar Post</h2>

    <form action="/posts/{{post._id}}?_method=PUT" method="POST">
        <label for="emoji">Emoji del post: <small class="text-success">(Opcional)</small> </label>
        <textarea type="text" id="emoji" name="emoji" class="w-25">{{post.emoji}}</textarea>
        <div class="form-group">
            <label for="title">Título</label>
            <input type="text" class="form-control" id="title" name="title" placeholder="Ingrese el título del post" value="{{post.title}}">
        </div>
        <label for="body">Ingrese el cuerpo del post: </label>
        <textarea class="form-control" id="textarea" name="body" rows="3"  placeholder="Ingrese su descripcion">{{post.body}}</textarea>
        <div class="form-group form-check mt-1">
            <input type="checkbox" class="form-check-input" id="guardarFecha" name="guardarFecha" {{#if post.fecha}}checked{{/if}}>
            <label class="form-check-label" for="guardarFecha">Guardar fecha de edicion</label>
        </div>
        <div class="d-flex justify-content-center">
            <button type="submit" id="btnCrearPost" class="btn btn-success mt-3">Submit</button>
            <a href="/posts/?skip=0&limit=5" type="reset" id="btnCancelCrear" class="btn btn-light mx-3 mt-3">Cancelar</a>
        </div>
        
    </form>
</div>
