<div class="bg-sec-opacity py-3 rounded border border-light p-2 mt-2 rounded">
    <h2 class="m-4">Editar Post</h2>

    <form action="/posts/{{post._id}}?_method=PUT" method="POST">
        <div class="form-group">
            <label for="title">Título</label>
            <input type="text" class="form-control" id="title" name="title" placeholder="Ingrese el título del post" value="{{post.title}}">
        </div>
        
        <label for="body">Example textarea</label>
        <textarea class="form-control" id="textarea" name="body" rows="3"  placeholder="Ingrese su descripcion">{{post.body}}</textarea>
        <div class="form-group form-check">
            <input type="checkbox" class="form-check-input" id="guardarFecha" name="guardarFecha">
            <label class="form-check-label" for="guardarFecha">Guardar fecha de edicion</label>
        </div>
        <div class="col">
                <input type="checkbox" class="form-check-input" id="guardarUser" name="guardarUser">
                <label class="form-check-label user-select-none" for="guardarUser">Guardar nombre de usuario</label>
        </div>
        <small id="userHelp" class="text-muted user-select-none">Si no guardas tu nombre, el <label class="text-success user-select-none">Post</label> podr'a ser editado/borrado por cualquier usuario registrado.</small>
        
        <div class="d-flex justify-content-center">
            <button type="submit" id="btnCrearPost" class="btn btn-success mt-3">Submit</button>
            <a href="/home" type="reset" id="btnCancelCrear" class="btn btn-light mx-3 mt-3">Cancelar</a>
        </div>
        
    </form>
</div>
