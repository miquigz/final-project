{{#if isAuthenticated_error}}
    {{>alert value = isAuthenticated_error value2 = 'edicion del post/accesso al post'}}
{{/if}}

<h1>{{this.posts.[posts.lenght].title}}</h1>

{{!-- {{posts.[(posts.lenght)].title}} --}}
{{!-- req.app.locals.variable_you_need --}}

{{>masRecientesCarrousel masRecientes = this.masRecientes}}

<div class="d-flex justify-content-center bg-sec-opacity py-3 rounded border border-light flex-wrap">
    <form action="" method="POST" class="d-flex align-items-middle">
        <div>
            <input type="checkbox" autocomplete="off" name="mostrarEmojis" id="mostrarEmojis">
            <label for="mostrarEmojis" class="user-select-none">Mostrar Emojis</label>
        </div>
        <div class="mx-2">
            <input type="checkbox" name="mostrarFechas" id="mostrarFechas">
            <label for="mostrarFechas" class="user-select-none">Mostrar Fechas</label>
        </div>
        <div class="mx-2">
            <input type="checkbox" name="mostrarAutores" id="mostrarAutores">
            <label for="mostrarAutores" class="user-select-none">Mostrar Autores</label>
        </div>
        <button type="submit" class="btn btn-dark text-success mx-2">Actualizar</button>
    </form>
</div>

{{#if homePagination}}
    <div class="d-flex justify-content-center bg-sec-opacity py-3 rounded border border-light flex-wrap">
        <h3 class="text-center w-100">{{title}}</h3>
        <div class="d-flex justify-content-center align-items-center">
            <a class="btn-light btn mx-4" href="/home">Ver Todos los posts:</a>
            {{>totalPosts paginacion = this.paginacion}}
        </div>
    </div>
    <hr class="bg-light shadow">
    {{>paginationHomeNav paginacion = this.paginacion}}

    <div class="row justify-content-center mx-auto p-4 border-success rounded bg-sec-opacity shadow-box" >
        {{#each posts}}
            <div class="col-sm-6 col-lg-3 col-md-6 card text-white bg-success my-3 mx-1 border-2 border-dark" style="max-height:300px; overflow: hidden;">

                <div class="card-header w-100 bg-dark rounded text-center">- Post -</div>
                <div class="card-body">
                    {{#if this.emoji}}<small>{{{this.emoji}}}</small>{{/if}}
                    <h4 class="card-title">{{this.title}}</h4>
                    <p class="card-text ">{{{this.body}}}</p>
                </div>
                {{!-- {{#if this.fecha}}
                <small>{{this.fecha}}</small>
                {{/if}} --}}
                <a href="/posts/{{this.slug}}" class="btn btn-dark my-2 font-weight-bold">Ver mas</a>
            </div>
        {{/each}}
    </div>

    {{>paginationHomeNav paginacion = this.paginacion}}

{{else}}
<div class="d-flex justify-content-center bg-sec-opacity py-3 rounded border border-light flex-wrap">
    <h2 class="text-center text-success my-2 w-100">{{title}} - Total de Posts</h2>
    <div class="d-flex justify-content-center align-items-center">
        <a class="btn-success btn mx-4" href="/home/?skip=0&&limit=6">Paginacion Posts</a>
    </div>
</div>

<hr class="bg-light text-center">

<div class="row justify-content-center mx-auto p-4 border border-dark rounded mt-3 bg-sec-opacity shadow-box">
    {{#each posts}}
    <div class="col-sm-6 col-lg-3 col-md-6 card text-dark bg-success mb-3 mx-1 border border-dark" style="max-height: 300px;">

        <div class="card-header w-100 bg-dark rounded text-white text-center">- Post - {{add @index 1}}</div>
        <div class="card-body">
            {{#if this.emoji}}<small>{{{this.emoji}}}</small>{{/if}}
            <h4 class="card-title">{{this.title}}</h4>
            <p class="card-text">{{{this.body}}}</p>
        </div>
        {{!-- {{#if this.fecha}}
        <small>{{this.fecha}}</small>
        {{/if}} --}}
        <a href="/posts/{{this.slug}}" class="btn btn-light my-2 font-weight-bold border border-dark rounded">Ver mas</a>
        {{!-- <div class="" style="max-width: 20rem;"></div>
    </div> --}}
</div>
{{/each}}
</div>
{{/if}}