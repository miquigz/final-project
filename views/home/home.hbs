{{#if isAuthenticated_error}}
    {{>alert value = isAuthenticated_error value2 = 'edicion del post/accesso al post'}}
{{/if}}
{{!-- {{#if signin_bien}}
    <h1>LOGIN EXITOSO</h1>
{{/if}} --}}

<h1>{{this.posts.[posts.lenght].title}}</h1>

{{!-- {{posts.[(posts.lenght)].title}} --}}
{{#if mostrarCarrousel}}
    <div class="d-flex justify-content-end my-1 container">
        <a href="/home/switchCarrousel" class="nav-link bg-link rounded text-white px-2 my-1 btn-sm">Mostrar posts mas recientes</a>
    </div>
{{else}}
    <div class="d-flex justify-content-end my-1  container">
        <a href="/home/switchCarrousel" class="btn-light btn-sm nav-link">Ocultar posts mas recientes</a>
    </div>
    <div class="container">
        {{>masRecientesCarrousel masRecientes = this.masRecientes}}
    </div>
{{/if}}



{{#if mostrarConfig}}
    <div class="d-flex justify-content-end my-1 container">
        <a href="/home/switchConfig" class="nav-link bg-link rounded text-white px-2 my-1 btn-sm">Mostrar configuracion de Posts</a>
    </div>
{{else}}
    <div class="d-flex justify-content-end my-1 container">
        <a href="/home/switchConfig" class="btn-light btn-sm nav-link">Ocultar configuracion de Posts</a>
    </div>
    <div class="container user-select-none">
        {{>configuracionPosts }}
    </div>
{{/if}}

{{#if homePagination}}
    <div class="d-flex justify-content-center bg-sec-opacity py-3 rounded border border-light flex-wrap container">
        <h3 class="text-center w-100">{{title}}</h3>
        <div class="d-flex justify-content-center align-items-center">
            <a class="nav-link btn btn-outline-warning rounded mx-4" href="/home">Ver Todos los posts:</a>
            {{>totalPosts paginacion = this.paginacion}}
        </div>
    </div>
    {{>paginationHomeNav paginacion = this.paginacion}}

    {{!-- <h4>
        {{@root.mostrar.autor}}
    </h4> --}}

    <div class="row justify-content-center mx-auto p-4 border-light rounded bg-sec-opacity shadow-box container">
        {{#each posts as |mostrar|}}
            {{>mostrarPost post = this}}
        {{/each}}
    </div>
    

    {{>paginationHomeNav paginacion = this.paginacion}}

{{else}}
<div class="d-flex justify-content-center bg-sec-opacity py-3 rounded border border-light flex-wrap container">
    <h2 class="text-center text-white my-2 w-100">{{title}} - Total de Posts</h2>
    <div class="d-flex justify-content-center align-items-center">
        <a class="nav-link btn btn-outline-warning rounded mx-4 mt-2" href="/home/?skip=0&&limit=6">Paginacion Posts</a>
    </div>
</div>

<hr class="bg-light text-center">

<div class="row justify-content-center mx-auto p-4 border border-dark rounded mt-3 bg-sec-opacity shadow-box">
    {{#each posts as |mostrar|}}
        {{>mostrarPost post = this index = @index}}
    {{/each}}
</div>

<div class="d-flex justify-content-end mt-4">
    <a class="nav-link bg-link rounded text-dark px-2 my-2" href="#top">Back to top</a>
</div>
{{/if}}


