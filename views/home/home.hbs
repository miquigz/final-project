{{#if isAuthenticated_error}}
    <h1>{{isAuthenticated_error}}</h1>
{{/if}}
<h2 class="text-center text-success h3">Posts mas recientes:</h2>

<h1>{{this.posts.[posts.lenght].title}}</h1>

{{!-- {{posts.[(posts.lenght)].title}} --}}
<hr class="bg-light">
<div id="carouselExampleIndicators" class="carousel slide my-3 bg-sec-opacity rounded border border-success py-2" style="height: 350px;" data-ride="carousel">
    <ol class="carousel-indicators mt-5">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <div class="d-flex justify-content-center">
                <div class="col-sm-6 col-lg-3 col-md-6 card text-light bg-dark mb-3 mx-1 border border-dark" style="max-height: 300px">
                <div class="card-header w-100 bg-success rounded text-dark text-center">- Post {{masRecientes.last.index}} -</div>
                <div class="card-body">
                    <h4 class="card-title">{{masRecientes.last.post.title}}</h4>
                    <p class="card-text">{{masRecientes.last.post.body}}</p>
                </div>
                {{#if masRecientes.last.post.fecha}}
                    <small>{{masRecientes.last.post.fecha}}</small>
                {{/if}}
                {{#if masRecientes.last.post.user}}
                    <small class="text-muted">Creado por: <label class="text-success">{{masRecientes.last.post.user}}</label></small>
                {{/if}}
                <a href="/posts/{{masRecientes.last.post.slug}}" class="btn btn-light btn-sm my-2 text-weight-bold">Ver mas</a>
            </div>
            </div>
        </div>
        <div class="carousel-item">
            <div class="d-flex justify-content-center">
                <div class="col-sm-6 col-lg-3 col-md-6 card text-light bg-dark mb-3 mx-1 border border-dark">
                <div class="card-header w-100 bg-success rounded text-dark text-center">- Post {{masRecientes.last2.index}} -</div>
                <div class="card-body">
                    <h4 class="card-title">{{masRecientes.last2.post.title}}</h4>
                    <p class="card-text">{{masRecientes.last2.post.body}}</p>
                </div>
                {{#if masRecientes.last2.post.fecha}}
                <small>{{masRecientes.last2.post.fecha}}</small>
                {{/if}}
                {{#if masRecientes.last2.post.user}}
                    <small class="text-muted">Creado por: <label class="text-success">{{masRecientes.last2.post.user}}</label></small>
                {{/if}}
                <a href="/posts/{{masRecientes.last2.post.slug}}" class="btn btn-light btn-sm my-2 text-weight-bold">Ver mas</a>
                </div>
            </div>            
        </div>
        <div class="carousel-item">
            <div class="d-flex justify-content-center">
                <div class="col-sm-6 col-lg-3 col-md-6 card text-light bg-dark mb-3 mx-1 border border-dark">
                <div class="card-header w-100 bg-success rounded text-dark text-center">- Post {{masRecientes.last3.index}} -</div>
                <div class="card-body">
                    <h4 class="card-title">{{masRecientes.last2.post.title}}</h4>
                    <p class="card-text">{{masRecientes.last2.post.body}}</p>
                </div>
                {{#if masRecientes.last2.post.fecha}}
                    <small class="text-muted">{{masRecientes.last3.post.fecha}}</small>
                {{/if}}
                {{#if masRecientes.last3.post.user}}
                    <small class="text-muted">Creado por: <label class="text-success">{{masRecientes.last3.post.user}}</label></small>
                {{/if}}
                <a href="/posts/{{masRecientes.last2.post.slug}}" class="btn btn-light btn-sm my-2 text-weight-bold">Ver mas</a>
            </div>
            </div>
            

        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<hr class="bg-light text-center">





{{#if homePagination}}
    <div class="bg-sec-opacity rounded">
        <h3 class="text-center">{{title}}</h3>
        <div class="d-flex justify-content-center align-items-center">
            <a class="btn-light btn mx-4" href="/home">Ver Todos los posts:</a>
            {{>totalPosts paginacion = this.paginacion}}
        </div>
    </div>
    <hr class="bg-success">
    {{>paginationHomeNav paginacion = this.paginacion}}

    <div class="row justify-content-center mx-auto bg-secondary p-4 border border-success rounded">
        {{#each posts}}
            <div class="col-sm-6 col-lg-3 col-md-6 card text-white bg-success my-3 mx-1 border border-dark">

                <div class="card-header w-100 bg-dark rounded text-center">- Post -</div>
                <div class="card-body">
                    <h4 class="card-title">{{this.title}}</h4>
                    <p class="card-text">{{this.body}}</p>
                </div>
                {{!-- {{#if this.fecha}}
                <small>{{this.fecha}}</small>
                {{/if}} --}}
                <a href="/posts/{{this.slug}}" class="btn btn-dark my-2 font-weight-bold">Ver mas</a>
            </div>
        {{/each}}
    </div>

    {{>paginationHomeNav paginacion = this.paginacion}}

{{else}}

<h2 class="text-center text-success my-2">{{title}} - Total de Posts</h2>
<div class="d-flex justify-content-center align-items-center">
    <a class="btn-success btn mx-4" href="/home/?skip=0&&limit=6">Paginacion Posts</a>
</div>

<div class="row justify-content-center mx-auto bg-secondary p-4 border border-success rounded mt-3">
    {{#each posts}}
    <div class="col-sm-6 col-lg-3 col-md-6 card text-dark bg-success mb-3 mx-1 border border-dark">

        <div class="card-header w-100 bg-dark rounded text-white text-center">- Post - {{add @index 1}}</div>
        <div class="card-body">
            <h4 class="card-title">{{this.title}}</h4>
            <p class="card-text">{{this.body}}</p>
        </div>
        {{!-- {{#if this.fecha}}
        <small>{{this.fecha}}</small>
        {{/if}} --}}
        <a href="/posts/{{this.slug}}" class="btn btn-light my-2 font-weight-bold border border-dark rounded">Ver mas</a>
        {{!-- <div class="" style="max-width: 20rem;"></div>
    </div> --}}
</div>
{{/each}}
</div>
{{/if}}