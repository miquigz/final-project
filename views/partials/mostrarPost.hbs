<div 
{{#if (eq @root.mostrar.tema 'theme1')}}class="col-sm-6 col-lg-3 col-md-6 card text-white bg-dark border-light border my-3 mx-1"{{/if}}
{{#if (eq @root.mostrar.tema 'theme2')}}class="col-sm-6 col-lg-3 col-md-6 card text-white bg-secondary border-light border my-3 mx-1"{{/if}}
{{#if (eq @root.mostrar.tema 'theme3')}}class="col-sm-6 col-lg-3 col-md-6 card text-white bg-warning disabled btn border-light border my-3 mx-1"{{else}}
    class="col-sm-6 col-lg-4 col-md-6 card text-light bg-vintage my-3 mx-4 p-4 border-secondary"{{/if}}
    style="max-height:700px; overflow: hidden; word-break: break-word;">
    <div class="div-card card-img-top w-100 my-2">
        <img src="{{post.img}}" class="image rounded-3" alt="postCard">
        <div class="overlay rounded-3 text-light" >
            <div class="text-overlay user-select-none" style="max-width: 15rem; word-break: break-word;"><small>{{post.title}}</small> </div>
        </div>
    </div>

    <div 
    {{#if (eq @root.mostrar.tema 'theme1')}}class="card-header rounded text-center bg-dark"{{/if}}
    {{#if (eq @root.mostrar.tema 'theme2')}}class="card-header rounded text-center bg-secondary	"{{/if}}
    {{#if (eq @root.mostrar.tema 'theme3')}}class="card-header rounded text-center bg-warning disabled btn"{{else}}
        class="card-header w-100 bg-dark rounded text-white text-center" {{!-- defect theme --}}
    {{/if}}>
        <a href="/posts/{{post.slug}}" class="btn-sm button-dark rounded text-white px-2">
        {{#if index}}{{add index 1}}{{/if}}{{#if (and post.emoji @root.mostrar.emoji)}}{{{post.emoji}}}{{else}} - Post -{{/if}}</a>
    </div>
    <div 
    {{#if (eq @root.mostrar.tema 'theme1')}}class="card-body row text-center bg-dark"{{/if}}
    {{#if (eq @root.mostrar.tema 'theme2')}}class="card-body row rounded text-dark bg-light"{{/if}}
    {{#if (eq @root.mostrar.tema 'theme3')}}class="card-body row rounded text-center bg-warning disabled btn"{{else}}
        class="card-body row" {{!-- defect theme --}}
    {{/if}}>
        <h5 class="card-title col-12 "></h5>
        <p class="card-text col-12 ">{{{post.body}}}</p>
        {{#if (and post.user @root.mostrar.autor)}}<small class="col-12 card-text text-warning"> {{post.user}}</small>{{/if}}
        {{#if (and post.fecha @root.mostrar.fecha)}}<small class="col-12 card-text"> {{post.fecha}}</small>{{/if}}
    </div>
</div>
